{
  "name": "graphql-trello-clone-backend",
  "private": true,
  "version": "0.0.1",
  "description": "Graphql Talk Server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --env=node",
    "lint": "eslint src",
    "ci": "npm run lint && npm run test",
    "husky": "husky-upgrade",
    "make-typedefs": "make-typedefs -o schema.graphql",
    "deploy": "NODE_ENV=production npm run make-typedefs && serverless deploy -v",
    "emulator": "NODE_ENV=development appsync-emulator"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "convict": "^5.1.0",
    "core-js": "^3.1.4",
    "express": "^4.17.1",
    "jwt-simple": "^0.5.6",
    "moment": "^2.24.0",
    "mongoose": "^5.7.5",
    "pino": "^5.13.1",
    "serverless-http": "^2.0.2"
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.4.0",
    "aws-appsync": "^1.8.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "graphql-tag": "^2.10.1",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "mongodb-memory-server": "^5.1.10",
    "node-fetch": "^3.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "serverless-appsync-plugin": "^1.1.2",
    "simple-graphql-assembler": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage",
    "forceExit": true,
    "setupFilesAfterEnv": [
      "./jestSetup.js"
    ]
  }
}
