{
  "name": "graphql-trello-clone-backend",
  "private": true,
  "version": "0.0.1",
  "description": "Graphql Talk Server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --env=node",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint src",
    "ci": "npm run lint && npm run test",
    "husky": "husky-upgrade",
    "make-typedefs": "make-typedefs"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "convict": "^4.0.2",
    "core-js": "3.0.0-beta.11",
    "jwt-simple": "^0.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.4.14",
    "serverless-appsync-offline": "^1.1.2",
    "serverless-appsync-plugin": "^1.0.9"
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.4.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.1.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "mongodb-memory-server": "^3.1.1",
    "nodemon": "^1.14.11",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "simple-graphql-assembler": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage",
    "forceExit": false,
    "setupFilesAfterEnv": [
      "./jestSetup.js"
    ]
  }
}
